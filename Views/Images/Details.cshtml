@model xkelenton.Models.Image

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>X-RAY Details</h2>

<div>
    @*    <h4>Image</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ScanDate)
        </dt>

        <dd>
            @Model.ScanDate.ToString("dd/MM/yyyy")
        </dd>

        <dt>
            Image File Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>

        <dt>
            Patient
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Patient.FirstName)
            @Html.DisplayFor(model => model.Patient.LastName)
        </dd>

    </dl>
</div>

<div class="form-group">
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary" style="margin-top: 10px;">Edit</a>
    <a href="@Url.Action("Index")" class="btn btn-outline-dark" style="margin-top: 10px; margin-left: 10px;">Back to List</a>
</div>

