@model xkelenton.Models.Appointment

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Appointment Details</h2>

<div>
    @*    <h4>Appointment</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AppointmentTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AppointmentTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Practitioner.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Practitioner.FirstName)
            @Html.DisplayFor(model => model.Practitioner.LastName)
        </dd>


