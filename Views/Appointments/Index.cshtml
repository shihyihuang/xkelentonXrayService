@model IEnumerable<xkelenton.Models.Appointment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center">
    <h2> Your Appointments </h2>
    <a href="@Url.Action("Create")" class="btn btn-secondary btn-lg"> Make an appointment</a>
</div>
<h6>Remember to have your referral handy!</h6>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Practitioner.FirstName)
        </th>
        @*        <th>
                @Html.DisplayNameFor(model => model.Patient.FirstName)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Practitioner.FirstName)
                @Html.DisplayFor(modelItem => item.Practitioner.LastName)
            </td>
            @*        <td>
                    @Html.DisplayFor(modelItem => item.Patient.FirstName)
                </td>*@
            <td>
                <div class="btn-group">
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-outline-dark">Edit</a>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-outline-dark">Details</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-outline-dark">Delete</a>
                </div>
            </td>
        </tr>
    }

</table>
