@model IEnumerable<xkelenton.Models.Practitioner>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var firstName = Model.FirstOrDefault()?.FirstName;
    var headerText = !string.IsNullOrEmpty(firstName) ? $"{firstName}'s Profile" : "Your Profile";
}

<h2>@headerText</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AhpraNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobileNumber)
        </th>
        @*        <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AhpraNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.HiddenFor(modelItem => item.UserId)
            </td>
            <td>
                <div class="btn-group">
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-outline-dark">Edit</a>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-outline-dark">Details</a>
                    @*                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-outline-dark">Delete</a>*@
                </div>
            </td>
        </tr>
    }

</table>
